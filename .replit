modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["freetype", "glibcLocales"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[agent]
integrations = ["flask_authentication:1.0.0", "python_sendgrid:1.0.0", "styling_replit:1.0.0"]

[userenv]

[userenv.shared]
MAIL_SERVER = "mail.smtp2go.com"
MAIL_PORT = "587"
MAIL_USE_TLS = "True"
MAIL_USERNAME = "tvc-smtp"
MAIL_DEFAULT_SENDER = "noreply@tvcconsulting.com"
